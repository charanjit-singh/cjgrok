{
    "manifest_version": 3,
    "name": "CJGrok",
    "version": "1.6.1",
    "description": "CJGrok - Provides superpowers to Grok AI",
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "permissions": [
        "storage",
        "webRequest",
        "tabs",
        "alarms"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "CJGrok - All Posts"
    },
    "content_scripts": [
        {
            "matches": [
                "https://grok.com/*",
                "https://x.ai/*"
            ],
            "js": [
                "inject.js"
            ],
            "run_at": "document_end"
        }
    ],
    "host_permissions": [
        "https://grok.com/*",
        "https://x.ai/*",
        "https://raw.githubusercontent.com/*"
    ]
}
